{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "AzDFJUN20"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/OnPremSQLSrvr_LS')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"OnPremSQLSrvr_Name": {
						"type": "String",
						"defaultValue": "ALPHA\\SQLEXPRESS01"
					},
					"OnPremSQLSrvr_DB_Name": {
						"type": "String",
						"defaultValue": "TestDB"
					},
					"OnPremSQLSrvr_UserName": {
						"type": "String",
						"defaultValue": "adfuser"
					},
					"OnPremSQLSrvr_Password_KV_SecretName": {
						"type": "String",
						"defaultValue": "OnPremSQLSrvr-Password"
					}
				},
				"annotations": [],
				"type": "SqlServer",
				"typeProperties": {
					"connectionString": {
						"type": "SecureString",
						"value": "**********"
					},
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "AzureKeyVault_LS",
							"type": "LinkedServiceReference"
						},
						"secretName": {
							"value": "@linkedService().OnPremSQLSrvr_Password_KV_SecretName",
							"type": "Expression"
						}
					}
				},
				"connectVia": {
					"referenceName": "SelfHostedIR",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": []
		}
	]
}