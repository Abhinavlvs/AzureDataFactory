{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "AzDFJUN20"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/SQLSrvrToBlobStore')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "CopyData",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "SqlServerSource",
								"queryTimeout": "02:00:00"
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureBlobStorageWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "OnPremSQLSrvr_DS",
								"type": "DatasetReference",
								"parameters": {
									"OnPremSQLSrvr_Table_Schema": {
										"value": "@pipeline().parameters.OnPremSQLSrvr_Table_Schema",
										"type": "Expression"
									},
									"OnPremSQLSrvr_Table_Name": {
										"value": "@pipeline().parameters.OnPremSQLSrvr_Table_Name",
										"type": "Expression"
									},
									"OnPremSQLSrvr_DB_Name": {
										"value": "@pipeline().parameters.OnPremSQLSrvr_DB_Name",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "BlobStore_DS",
								"type": "DatasetReference",
								"parameters": {
									"ContainerName": "blobcont01",
									"FileName": {
										"value": "@pipeline().parameters.OnPremSQLSrvr_Table_Name",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"OnPremSQLSrvr_Table_Schema": {
						"type": "string",
						"defaultValue": "dbo"
					},
					"OnPremSQLSrvr_Table_Name": {
						"type": "string",
						"defaultValue": "station"
					},
					"BlobContainerName": {
						"type": "string",
						"defaultValue": "blobcont01"
					},
					"OnPremSQLSrvr_DB_Name": {
						"type": "string",
						"defaultValue": "TestDB"
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/OnPremSQLSrvr_DS')]",
				"[concat(variables('factoryId'), '/datasets/BlobStore_DS')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/BlobStore_DS')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStore_LS",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"ContainerName": {
						"type": "string"
					},
					"FileName": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": {
							"value": "@concat(dataset().FileName,utcnow(),'.csv')",
							"type": "Expression"
						},
						"container": {
							"value": "@dataset().ContainerName",
							"type": "Expression"
						}
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureBlobStore_LS')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/OnPremSQLSrvr_DS')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "OnPremSQLSrvr_LS",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"OnPremSQLSrvr_Table_Schema": {
						"type": "String"
					},
					"OnPremSQLSrvr_Table_Name": {
						"type": "String"
					},
					"OnPremSQLSrvr_DB_Name": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "SqlServerTable",
				"schema": [
					{
						"name": "student_id",
						"type": "int",
						"precision": 10
					},
					{
						"name": "student_name",
						"type": "varchar"
					}
				],
				"typeProperties": {
					"schema": {
						"value": "@dataset().OnPremSQLSrvr_Table_Schema",
						"type": "Expression"
					},
					"table": {
						"value": "@dataset().OnPremSQLSrvr_Table_Name",
						"type": "Expression"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureBlobStore_LS')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"serviceEndpoint": "https://azblobstrg.blob.core.windows.net"
				}
			},
			"dependsOn": []
		}
	]
}